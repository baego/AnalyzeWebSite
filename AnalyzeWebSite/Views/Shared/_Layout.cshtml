<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="~/js/spyLib/collector.js"></script>
	<script type="text/javascript" src="~/js/spyLib/geo.js"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/custom.css" />
	<link rel="shortcut icon" href="~/images/site-logo.png" type="image/png">
</head>
<body>
	<script>
		checkIp(checkData);
	</script>	
	<nav class="navbar navbar-inverse navbar-fixed-top navbar-custom">
		<ul class="list-custom">
			<li style="font-size: x-large;"><a href="@Url.Action("Index", "Home")"> <img src="~/images/magister-head.png" height="30" width="30" />&nbsp;Моя магистерская диссертация</a></li>
			<li><a href="@Url.Action("Index", "History")">История</a></li>
			<li><a href="@Url.Action("Index", "Requirements")">Требования</a></li>
			<li><a href="@Url.Action("Index", "Test")">Пройти тест</a></li>
			<li><a href="@Url.Action("Index", "AboutYou")">О вaс</a></li>
			<li><a href="@Url.Action("Index", "Author")">Об авторе</a></li>
			<li><a href="@Url.Action("Index", "Portrait")">Портрет</a></li>
		</ul>
	</nav>
	@if (ViewContext.RouteData.Values["controller"].ToString() != "Home") {
		<breadcrumb></breadcrumb>
	}
	<div class="container body-content">
		@RenderBody()
	</div>
	<hr />
	<footer style="color:cornflowerblue; text-align:center">
		<a id="externalToGithubFromFooter" target="_blank" onclick="linkLogger(event)" href="https://github.com/baego/AnalyzeWebSite">Проект на Github&nbsp;<img src="~/images/githubLogo.svg" height="30" width="30" /></a>
		<br />
		<a id="externalToPoliticsFromFooter" target="_blank" onclick="linkLogger(event)" href="@Url.Action("Politics", "Home")">Политика конфиденциальности</a>

		<p>&copy; 2020 </p>
	</footer>

	@RenderSection("Scripts", required: false)
</body>
</html>
